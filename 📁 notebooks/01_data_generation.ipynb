import numpy as np
import pandas as pd
from pathlib import Path
import json

# Reproducibility
SEED = 42
np.random.seed(SEED)

# Paths
DATA_DIR = Path("../data")
RAW_DIR = DATA_DIR / "raw"
META_DIR = DATA_DIR / "metadata"

RAW_DIR.mkdir(parents=True, exist_ok=True)
META_DIR.mkdir(parents=True, exist_ok=True)

def generate_causal_features(n):
    x1 = np.random.normal(loc=50, scale=10, size=n)     # income
    x2 = np.random.uniform(low=0, high=100, size=n)    # credit history
    return x1, x2


def generate_label(x1, x2):
    epsilon = np.random.normal(0, 0.1, size=len(x1))
    y_score = 0.5 * x1 + 0.3 * x2 + epsilon
    threshold = np.percentile(y_score, 75)
    y = (y_score > threshold).astype(int)
    return y

def generate_spurious_feature(y, strength):
    noise = np.random.normal(0, 1, size=len(y))
    return strength * y + (1 - strength) * noise

def generate_environment(n, env_name):
    x1, x2 = generate_causal_features(n)
    y = generate_label(x1, x2)

    if env_name == "E1":
        s1 = generate_spurious_feature(y, strength=0.8)
        s2 = np.random.normal(0, 1, size=n)

    elif env_name == "E2":
        s1 = np.random.normal(0, 1, size=n)
        s2 = generate_spurious_feature(y, strength=0.7)

    elif env_name == "E_test":
        s1 = np.random.normal(0, 1, size=n)
        s2 = np.random.normal(0, 1, size=n)

    else:
        raise ValueError("Unknown environment")

    return pd.DataFrame({
        "income": x1,
        "credit_history": x2,
        "application_channel": s1,
        "processing_day": s2,
        "loan_default": y,
        "environment": env_name
    })

N_TRAIN = 5000
N_TEST = 2000

df_E1 = generate_environment(N_TRAIN, "E1")
df_E2 = generate_environment(N_TRAIN, "E2")
df_Etest = generate_environment(N_TEST, "E_test")

EXPECTED_COLS = {
    "income",
    "credit_history",
    "application_channel",
    "processing_day",
    "loan_default",
    "environment"
}

for df in [df_E1, df_E2, df_Etest]:
    assert set(df.columns) == EXPECTED_COLS
    assert df.isnull().sum().sum() == 0
    assert df["loan_default"].nunique() == 2

df_E1.to_csv(RAW_DIR / "E1.csv", index=False)
df_E2.to_csv(RAW_DIR / "E2.csv", index=False)
df_Etest.to_csv(RAW_DIR / "E_test.csv", index=False)

metadata = {
    "seed": SEED,
    "causal_features": ["income", "credit_history"],
    "spurious_features": ["application_channel", "processing_day"],
    "environments": {
        "E1": {"spurious": "application_channel", "strength": 0.8},
        "E2": {"spurious": "processing_day", "strength": 0.7},
        "E_test": {"spurious": None}
    }
}

with open(META_DIR / "data_generation.json", "w") as f:
    json.dump(metadata, f, indent=2)



